# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Viewer.search()


# Login page
GET     /signin         controllers.Login.signin()
POST    /signin         controllers.Login.authenticate()

# Register page
GET     /signup         controllers.Register.signup()
POST    /signup         controllers.Register.addClient()

# New Title
GET     /addTitle                   controllers.Application.addTitle()
GET     /addTitle/music             controllers.MusicCreator.build()
GET     /addTitle/book              controllers.RegisterTitles.addBook()
GET     /addTitle/comic             controllers.RegisterTitles.addComic()
GET     /addTitle/movie             controllers.RegisterTitles.addMovie()
GET     /addTitle/series            controllers.RegisterTitles.addSeries()

POST    /addTitle/music             controllers.MusicCreator.store()
POST    /addTitle/book              controllers.RegisterTitles.addNewBook()
POST    /addTitle/comic             controllers.RegisterTitles.addNewComic()
POST    /addTitle/movie             controllers.RegisterTitles.addNewMovie()
POST    /addTitle/series            controllers.RegisterTitles.addNewSeries()


# Title pages
GET     /:type/$name<([^\s-]+[-])*[^\s-.]+> controllers.Viewer.showTitle(type, name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file   controllers.Assets.at(path="/public", file)

# Edit a title
#GET     /:type/$name<([^\s-]+[-])*[^\s-.]+>/edit controllers.Viewer.editTitle(type, name)

