# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Viewer.search()


# Login page
GET     /signin         controllers.Login.signin()
POST    /signin         controllers.Login.authenticate()

# Register page
GET     /signup         controllers.Register.signup()
POST    /signup         controllers.Register.addClient()


# New Title
GET     /addTitle                   controllers.Application.addTitle()
GET     /addTitle/music             controllers.Application.addMusic()
GET     /addTitle/book              controllers.Application.addBook()
GET     /addTitle/hq                controllers.Application.addHQ()
GET     /addTitle/movie             controllers.Application.addMovie()
GET     /addTitle/series            controllers.Application.addSeries()

# Title pages
GET     /:type/$name<([^\s-]+[-])*[^\s-.]+>.html controllers.Viewer.showTitle(type, name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file   controllers.Assets.at(path="/public", file)

